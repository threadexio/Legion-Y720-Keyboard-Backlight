{
    "tasks": [
        {
            "type": "process",
            "label": "Build debug",
            "command": "/usr/bin/make",
            "args": [ "clean", "debug" ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "process",
            "label": "Build release",
            "command": "/usr/bin/make",
            "args": [ "clean", "release" ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
    "version": "2.0.0"
}